{
  "javascript": {
    "indent": 2,
    "quotes": "single",
    "semi": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  },
  "css": {
    "indent": 2,
    "max-empty-lines": 1,
    "color-hex-case": "lower",
    "color-hex-length": "short",
    "block-no-empty": true
  },
  "html": {
    "indent": 2,
    "void-elements": true,
    "attr-quotes": "double",
    "tag-name-lowercase": true,
    "attr-name-lowercase": true,
    "attr-value-double-quotes": true,
    "id-unique": true
  },
  "general": {
    "max-file-size": "500kb",
    "end-of-line": "lf",
    "trim-trailing-whitespace": true,
    "insert-final-newline": true,
    "max-line-length": 100
  },
  "project": {
    "name": "Bedtime Stories",
    "description": "A web application for interactive bedtime stories",
    "structure": {
      "scripts": "JavaScript files for story loading and interaction",
      "styles": "CSS styling for the application",
      "images": "Story images and background assets",
      "stories": "JSON files containing story content",
      "audio": "Background music and narration files"
    }
  }
} 